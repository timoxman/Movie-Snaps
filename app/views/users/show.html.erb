<section id="userProfile">

  <h2>User page of <%= @user.name %></h2>

  <img id="user_img" src="<%= @user.image %>" title="<%= @user.name %>"/>

  <ul>
    <% @visits.each do |visit| %>
      <li>
        Date visited: <%= visit.date_visited %></br>
        Location: <%= link_to visit.scene.location.address, location_path(visit.scene.location) %></br>
        Movie: <%= link_to visit.scene.movie.name, movie_path(visit.scene.movie) %></br>
        Visit description: <%= visit.description %>
      </li>
      </br>
    <% end %>
  </ul>

</section>