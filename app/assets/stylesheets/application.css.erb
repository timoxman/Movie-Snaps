body {
  /*background: #717679;*/
  margin: 0;
  padding:0;
  font-family: 'Julius Sans One', sans-serif;
  color:#000;
  line-height: 1;
}

.clearfix::after {
  clear: both;
  content: '';
  display: block;
  font-size: 0;
  line-height: 0;
  visibility: hidden;
  width: 0;
  height: 0;
}

#wrapper {
  margin: 0;
  padding: 0;
  position: relative;
  width: 100%;
}

 .stretch {
   position: absolute;
   top:0;
   left: 0;
   right: 0;
   bottom: 0;
 }

 #container {
   background: #E0F2F7;
   margin: 0 auto;
   width: 1012px;
   position: relative;
 }

 #logo {
   background: url(filmlogo1.png) no-repeat;
   position: absolute;
   left: 0;
   width: 250px;
   top:0;
   width: 250px;
   height: 96px;


 }

#topnav {
  margin: 0;
  padding: 0;
  background:#333 url(<%= asset_path('header.png') %>) no-repeat 0px 0px;
  border-bottom: 3px solid #333;
  width: 100%;
  min-height: 93px;
  max-height: 93px;
  /*margin-bottom: 1em;*/

}

#signInOut {
  position: absolute;
  right: 6%;
  top: 17px;
  line-height: 22px;
  text-align: center;
  padding: 8px;
  border: 1px solid #F8f8f8;
  box-shadow: 0px 0px 1px rgba(255,255,255,.8);
  background: -webkit-gradient(linear, left top, left bottom, from(#FFFFFF), to(#CCD0D6));
  font-size: 11px;
  /* margin: -3px 0 0 0; */
  font-weight: bold;
  color: #333;
  border-radius: 3px;
  text-decoration: none;
  cursor: pointer;
  transition: all .3s ease-in-out;

}

#signInOut:hover {
  border: 1px solid #FCFDFF;
  background: -webkit-gradient(linear, left top, left bottom, from(#F8F8F8), to(#A4B6C4));
  font-weight: bold;
  color: #333333;
  text-decoration: none;
}

nav {
  display: block;
  margin: 0;
  padding: 0;
  overflow: auto;
}

ul#navigation {
  text-transform: uppercase;

  width: 79%;
  margin-top: 1px;

  margin-bottom: 0;
  overflow: auto;
  padding: 0;

}

ul#navigation li {
  float:right;
  display: inline;
  margin: 0 0 0 1px;
  line-height: 21px;
  color: #fff;
}

ul#navigation li:hover {
  background-color:#E0F2F7;
  height: 90px;
  transition: all .3s ease-in-out;
}

li:hover a span.subtitle {
  color: #d5d5d5;
}

ul#navigation li a {
  display: block;
  padding: 15px 30px 15px 30px;
  text-decoration: none;
  color:#bbb;
  font-size: 14px;
  font-weight: bold;

}

ul#navigation li a:hover {
  color:#fff;
  text-shadow: 1px .5px 0px rgba(0,0,0,.3);
}

.subtitle {
  font-weight: normal;
  font-size: 11px;
  color:#777c82;
  line-height: 16px;
  text-transform: none;
  text-shadow: none;
}

