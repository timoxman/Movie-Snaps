}

body {
  font-family: 'Julius Sans One', sans-serif;
}




/* transitions */

h3 a,#navigation li a, signInOut  {
  transition: all .3s, background-color 200ms ease;
  transition: all .3s, background-color 200ms ease;
  -moz-transition: all .3s, background-color 200ms ease;
  -webkit-transition: all .3s, background-color 200ms ease;
  -o-transition: all .3s, background-color 200ms ease;
}


header,#topnav, article a, #main, .menu, nav, a, img,#welcomeFeatured,#welcomeAside,
 welcomeMainContent, mfooter,.box, figure,.button {
  transition: all .3s, background-color 200ms ease;
  transition: all .3s, background-color 200ms ease;
  -moz-transition: all .3s, background-color 200ms ease;
  -webkit-transition: all .3s, background-color 200ms ease;
  -o-transition: all .3s, background-color 200ms ease;
}
